@model Hospital_Domain.Dtos.DoctorProfileDto

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center">
        <i class="fas fa-times-circle"></i> @TempData["Error"]
    </div>
}

<div class="container py-5">

    <!-- PROFILE CARD -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <div class="profile-card">
                <h3>
                    <i class="fas fa-user-md"></i> Doctor Profile
                </h3>

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Name">Full Name</label>
                        <input asp-for="Name" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>

                    <div class="mb-4">
                        <label asp-for="Specialization">Specialization</label>
                        <input asp-for="Specialization" class="form-control" />
                    </div>

                    <button type="submit" class="btn-primary-custom">
                        <i class="fas fa-save"></i> Update Profile
                    </button>
                </form>

                <div class="text-center mt-3">
                    <a href="/Doctor/Dashboard" class="back-link">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- PASSWORD CARD -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="profile-card">
                <h3>
                    <i class="fas fa-lock"></i> Change Password
                </h3>

                <form asp-action="ChangePassword" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label>Current Password</label>
                        <input type="password" name="CurrentPassword"
                               class="form-control" required />
                    </div>

                    <div class="mb-3 position-relative">
                        <label>New Password</label>
                        <input type="password" id="newPassword"
                               name="NewPassword"
                               class="form-control pe-5" required />
                        <span class="eye-icon"
                              onclick="togglePassword('newPassword', this)">
                            <i class="fas fa-eye"></i>
                        </span>
                    </div>

                    <div class="mb-4">
                        <label>Confirm New Password</label>
                        <input type="password" name="ConfirmPassword"
                               class="form-control" required />
                    </div>

                    <button type="submit" class="btn-warning-custom">
                        <i class="fas fa-key"></i> Update Password
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- JS -->
<script>
    function togglePassword(id, el) {
        const input = document.getElementById(id);
        const icon = el.querySelector("i");

        if (input.type === "password") {
            input.type = "text";
            icon.classList.replace("fa-eye", "fa-eye-slash");
        } else {
            input.type = "password";
            icon.classList.replace("fa-eye-slash", "fa-eye");
        }
    }
</script>

<style>
    body {
        background: linear-gradient(135deg, #f4f6fb, #dfe7ff);
        font-family: 'Segoe UI', sans-serif;
    }

    .profile-card {
        background: white;
        padding: 30px;
        border-radius: 18px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.08);
    }

        .profile-card h3 {
            text-align: center;
            margin-bottom: 25px;
            color: #0f4c75;
            font-weight: 700;
        }

    label {
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 6px;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px;
    }

        .form-control:focus {
            border-color: #0f4c75;
            box-shadow: 0 0 0 .2rem rgba(15,76,117,.25);
        }

    .btn-primary-custom {
        width: 100%;
        background: #0f4c75;
        color: white;
        padding: 12px;
        border-radius: 12px;
        border: none;
        font-weight: 600;
    }

        .btn-primary-custom:hover {
            background: #3282b8;
        }

    .btn-warning-custom {
        width: 100%;
        background: #f0ad4e;
        color: #000;
        padding: 12px;
        border-radius: 12px;
        border: none;
        font-weight: 600;
    }

        .btn-warning-custom:hover {
            background: #ec971f;
        }

    .back-link {
        color: #6c757d;
        text-decoration: none;
        font-weight: 600;
    }

        .back-link:hover {
            color: #0f4c75;
        }

    .eye-icon {
        position: absolute;
        top: 38px;
        right: 15px;
        cursor: pointer;
        color: #6c757d;
    }
</style>
