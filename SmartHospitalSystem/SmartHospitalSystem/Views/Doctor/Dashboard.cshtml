@{
    ViewData["Title"] = "Doctor Dashboard";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }



    .dashboard-layout {
        display: flex;
        height: 100vh;
    }


    .sidebar {
        width: 80px;
        background: #5c6cff;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 20px;
        height: 100vh;
    }


    .menu-item {
        width: 100%;
        height: 65px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        text-decoration: none;
    }

        .menu-item i {
            color: #fff;
            font-size: 22px;
        }

        .menu-item span {
            position: absolute;
            left: 90px;
            background: #000;
            color: #fff;
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 13px;
            opacity: 0;
            white-space: nowrap;
            pointer-events: none;
            transition: 0.3s;
        }

        .menu-item:hover span {
            opacity: 1;
        }

        .menu-item button {
            background: none;
            border: none;
            padding: 0;
        }


    .main-content {
        flex: 1;
        padding: 30px;
        overflow-y: auto;
    }

    .right-panel {
        width: 300px;
        background: #f8f9ff;
        padding: 25px;
        height: 100vh;
    }


    .welcome-card {
        background: #6a74f7;
        color: white;
        padding: 25px;
        border-radius: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 25px;
    }

    /* STATS */
    .stats {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-top: 30px;
    }

    .stats-two {
        grid-template-columns: repeat(2, 1fr);
        max-width: 500px;
    }

    .stat-box {
        background: white;
        padding: 20px;
        border-radius: 18px;
        box-shadow: 0 10px 25px rgba(0,0,0,.08);
        text-align: center;
    }

        .stat-box i {
            font-size: 30px;
            color: #6a74f7;
        }

    /* CALENDAR */
    .calendar-box {
        margin-top: 30px;
        background: white;
        border-radius: 20px;
        padding: 25px;
    }

    /* RIGHT PANEL */
    .right-panel {
        width: 300px;
        background: #f8f9ff;
        padding: 25px;
    }

    .profile-card {
        background: white;
        border-radius: 20px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 10px 25px rgba(0,0,0,.08);
    }

    :root {
        --bg: #eef1ff;
        --card: #ffffff;
        --text: #000;
    }

    .dark {
        --bg: #121212;
        --card: #1f1f1f;
        --text: #ffffff;
    }

    body {
        background: var(--bg);
        color: var(--text);
    }

    .card, .calendar-box, .profile-card {
        background: var(--card);
    }

    .menu-item {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        text-decoration: none;
    }

        .menu-item span {
            position: absolute;
            left: 90px;
            background: #000;
            color: #fff;
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 13px;
            opacity: 0;
            white-space: nowrap;
            pointer-events: none;
            transition: 0.3s;
        }

        .menu-item:hover span {
            opacity: 1;
        }

        .menu-item button {
            background: none;
            border: none;
        }


        .profile-card img {
            width: 80px;
            border-radius: 50%;
            margin-bottom: 10px;
        }
</style>
<script>
    function toggleTheme() {
        document.body.classList.toggle("dark");
        localStorage.setItem("theme",
            document.body.classList.contains("dark"));
    }

    if (localStorage.getItem("theme") === "true") {
        document.body.classList.add("dark");
    }
</script>

<div class="dashboard-layout">

    <!-- SIDEBAR -->
    <div class="sidebar">
        <a asp-action="Dashboard" class="menu-item">
            <i class="fas fa-home"></i>
            <span>Dashboard</span>
        </a>

        <a asp-action="Appointments" class="menu-item">
            <i class="fas fa-calendar-check"></i>
            <span>Appointments</span>
        </a>

       @*  <a asp-action="Availability" class="menu-item">
            <i class="fas fa-clock"></i>
            <span>Availability</span>
        </a> *@

        <a asp-action="Profile" class="menu-item">
            <i class="fas fa-user-md"></i>
            <span>Profile</span>
        </a>

        <form asp-action="Logout" method="post" class="menu-item">
            @Html.AntiForgeryToken()
            <button type="submit">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </button>
        </form>
    </div>


    <!-- MAIN -->
    <div class="main-content">

        <div class="top-bar">
            <h3>Dashboard</h3>
            <span>@DateTime.Now.ToString("dddd, dd MMM yyyy")</span>
        </div>

        <div class="welcome-card">
            <div>
                <h4>Welcome, Dr. @ViewBag.DoctorName</h4>
                <p>Have a nice day at work</p>
            </div>
            <button onclick="toggleTheme()" class="btn btn-sm btn-secondary">
                🌙 Dark Mode
            </button>

        </div>

      
        <!-- STATS -->
        <div class="stats stats-two">
            <div class="stat-box">
                <i class="fas fa-user-injured"></i>
                <h4>Patients</h4>
                <p>@ViewBag.PatientCount</p>
            </div>

            <div class="stat-box">
                <i class="fas fa-file-prescription"></i>
                <h4>Prescriptions</h4>
                <p>@ViewBag.PrescriptionCount</p>
            </div>
        </div>

        @if (ViewBag.TodayAppointments > 0)
        {
            <div class="alert alert-info">
                🔔 You have @ViewBag.TodayAppointments appointments today
            </div>
        }

        <!-- CALENDAR -->
      @*   <div class="calendar-box">
            <h4>Upcoming Appointments</h4>

            @foreach (var appt in ViewBag.UpcomingAppointments)
            {
                <div class="d-flex justify-content-between border-bottom py-2">
                    <span>@appt.Patient.Name</span>
                    <span>@appt.AppointmentDate.ToString("dd MMM, hh:mm tt")</span>
                </div>
            }
        </div> *@


    </div>

    <!-- RIGHT PANEL -->
    <div class="right-panel">
        <div class="profile-card">
          @*   <img src="@Url.Content("~/" + ViewBag.ProfileImagePath)"
                 alt="Doctor Image"
                 onerror="this.src='/images/default-doctor.png'" /> *@

            <h5>@ViewBag.DoctorName</h5>
            <small>Doctor</small>
        </div>
    </div>

</div>
