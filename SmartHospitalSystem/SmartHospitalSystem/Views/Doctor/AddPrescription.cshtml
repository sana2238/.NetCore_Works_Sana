@model Hospital_Domain.Dtos.PrescriptionDto

<h2>📝 Add Prescription</h2>

<style>
    body {
        background: linear-gradient(120deg, #0f4c75, #3282b8);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .glass-card {
        width: 520px;
        background: rgba(255,255,255,0.9);
        backdrop-filter: blur(10px);
        border-radius: 18px;
        padding: 35px;
        box-shadow: 0 20px 45px rgba(0,0,0,.2);
        animation: fadeIn .5s ease-in;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(15px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .glass-card h3 {
        text-align: center;
        color: #0f4c75;
        margin-bottom: 25px;
    }

    .form-group label {
        font-weight: 600;
        color: #333;
        margin-bottom: 5px;
    }

    textarea {
        border-radius: 10px;
        padding: 12px;
        border: 1px solid #ccc;
        transition: all .2s;
    }

        textarea:focus {
            border-color: #3282b8;
            box-shadow: 0 0 0 2px rgba(50,130,184,.2);
            outline: none;
        }

    .btn-save {
        width: 100%;
        padding: 12px;
        background: linear-gradient(135deg, #0f4c75, #3282b8);
        color: #fff;
        font-weight: 600;
        border-radius: 12px;
        border: none;
        margin-top: 15px;
        transition: transform .2s;
    }

        .btn-save:hover {
            transform: translateY(-2px);
        }
</style>

<div class="glass-card">
    <h3>📝 Add Prescription</h3>

    <form asp-action="Prescription" method="post">
        <input type="hidden" asp-for="AppointmentId" />

        <div class="form-group mb-3">
            <label>🩺 Diagnosis</label>
            <textarea asp-for="Diagnosis" rows="3" required></textarea>
        </div>

        <div class="form-group mb-3">
            <label>💊 Medicines</label>
            <textarea asp-for="Medicines" rows="3" required></textarea>
        </div>

        <div class="form-group">
            <label>📝 Notes</label>
            <textarea asp-for="Notes" rows="2"></textarea>
        </div>

        <button class="btn-save">Save Prescription</button>
    </form>
</div>
