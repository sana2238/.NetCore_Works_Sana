@model IEnumerable<Hospital_Domain.Model.Doctor>
@{
    ViewData["Title"] = "All Doctors";
}

<style>
    .page-title {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        font-size: 2.2rem;
        font-weight: 700;
        color: #0f4c75;
        margin-bottom: 30px;
    }

    .doctor-card {
        background: rgba(255,255,255,0.9);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 25px;
        box-shadow: 0 20px 40px rgba(0,0,0,.12);
    }

    .doctor-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 12px;
    }

        .doctor-table thead th {
            border: none;
            color: #555;
            font-weight: 600;
            padding-bottom: 10px;
        }

        .doctor-table tbody tr {
            background: #f8fbff;
            border-radius: 14px;
            transition: all .25s ease;
        }

            .doctor-table tbody tr:hover {
                transform: translateY(-4px);
                box-shadow: 0 10px 25px rgba(15,76,117,.15);
            }

        .doctor-table td {
            border: none;
            padding: 15px;
            vertical-align: middle;
        }

    .doctor-info {
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 600;
        color: #0f4c75;
    }

        .doctor-info img {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #0f4c75;
        }

    .badge-special {
        background: #e8f1ff;
        color: #0f4c75;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: .9rem;
        font-weight: 600;
    }

    .action-btn {
        border: none;
        padding: 8px 12px;
        border-radius: 10px;
        font-size: .95rem;
        margin-right: 6px;
        transition: .3s;
    }

    .btn-view {
        background: #dbeafe;
        color: #1e40af;
    }

        .btn-view:hover {
            background: #2563eb;
            color: #fff;
        }

    .btn-delete {
        background: #fee2e2;
        color: #991b1b;
    }

        .btn-delete:hover {
            background: #dc2626;
            color: #fff;
        }
</style>

<div class="page-title">
    <i class="fa-solid fa-user-doctor"></i>
    All Doctors
</div>

<div class="doctor-card">

    @if (!Model.Any())
    {
        <div class="text-center text-muted py-5">
            <i class="fa-solid fa-user-slash fa-3x mb-3"></i>
            <p>No doctors found</p>
        </div>
    }
    else
    {
        <table class="doctor-table">
            <thead>
                <tr>
                    <th>Doctor</th>
                    <th>Email</th>
                    <th>Specialization</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td>
                            <div class="doctor-info">
                                <img src="~/@d.ProfileImagePath" />
                                @d.Name
                            </div>
                        </td>

                        <td>@d.Email</td>

                        <td>
                            <span class="badge-special">
                                <i class="fa-solid fa-stethoscope me-1"></i>
                                @d.Specialization
                            </span>
                        </td>

                        <td class="text-center">
                            <a asp-controller="Admin"
                               asp-action="DoctorProfile"
                               asp-route-id="@d.DoctorId"
                               class="action-btn btn-view">
                                <i class="fa-solid fa-eye"></i>
                            </a>

                            <form asp-controller="Admin"
                                  asp-action="DeleteDoctor"
                                  asp-route-id="@d.DoctorId"
                                  method="post"
                                  style="display:inline;"
                                  onsubmit="return confirm('Delete this doctor?');">

                                <button class="action-btn btn-delete">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="text-center mt-4">
    <a asp-controller="Admin"
       asp-action="Dashboard"
       class="btn btn-outline-primary rounded-pill px-4">
        <i class="fa-solid fa-arrow-left"></i> Back to Dashboard
    </a>
</div>
