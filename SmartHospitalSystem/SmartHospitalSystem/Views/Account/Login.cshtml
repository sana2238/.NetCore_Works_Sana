@model Hospital_Domain.Dtos.LoginDto
@{
    ViewData["Title"] = "Doctor Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Doctor Login</title>

    <style>
        body {
            margin: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #0f4c75, #3282b8);
        }

        .login-card {
            width: 400px;
            background: #ffffff;
            padding: 35px;
            border-radius: 16px;
            box-shadow: 0 18px 45px rgba(0,0,0,.25);
            animation: fadeIn .6s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-card h2 {
            text-align: center;
            color: #0f4c75;
            margin-bottom: 5px;
        }

        .login-card p {
            text-align: center;
            color: #666;
            margin-bottom: 25px;
            font-size: 14px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: 600;
                font-size: 14px;
                color: #333;
            }

        .form-control {
            width: 100%;
            padding: 11px;
            border-radius: 9px;
            border: 1px solid #ccc;
            margin-top: 6px;
            font-size: 14px;
        }

            .form-control:focus {
                outline: none;
                border-color: #3282b8;
                box-shadow: 0 0 0 2px rgba(50,130,184,.25);
            }

        .btn-login {
            width: 100%;
            padding: 12px;
            background: #0f4c75;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 10px;
        }

            .btn-login:hover {
                background: #3282b8;
            }

        .register-link {
            text-align: center;
            margin-top: 18px;
            font-size: 14px;
        }

            .register-link a {
                color: #0f4c75;
                font-weight: 600;
                text-decoration: none;
            }

                .register-link a:hover {
                    text-decoration: underline;
                }

        .divider {
            text-align: center;
            margin: 20px 0;
            color: #aaa;
            font-size: 13px;
        }
    </style>
</head>

<body class="@ViewBag.Theme">

    <div class="login-card">
        <h2>👨‍⚕️ Doctor Login</h2>
        <p>Smart Hospital Management System</p>

        <form asp-action="Login" method="post">

            <div class="form-group">
                <label>Email Address</label>
                <input asp-for="Email" type="email" class="form-control"
                       placeholder="doctor@hospital.com" required />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password"
                       class="form-control" placeholder="Enter password" required />
            </div>

            <button type="submit" class="btn-login">
                Login
            </button>

        </form>

