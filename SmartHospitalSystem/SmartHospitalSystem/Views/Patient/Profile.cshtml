@model Hospital_Domain.Model.Patient

@{
    ViewData["Title"] = "Patient Profile";
}

<style>
    .dashboard {
        max-width: 800px;
        margin: 40px auto;
        font-family: 'Segoe UI', sans-serif;
    }

        .dashboard h2 {
            color: #0f4c75;
            margin-bottom: 25px;
            text-align: center;
        }

    .card {
        background: #f4f9ff;
        padding: 25px;
        border-radius: 14px;
        box-shadow: 0 10px 25px rgba(0,0,0,.1);
        transition: transform .2s;
        margin-bottom: 20px;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .profile-table th {
        width: 150px;
        color: #0077b6;
    }

    .btn-primary {
        background: #0f4c75;
        color: white;
        border-radius: 8px;
        padding: 10px 20px;
        margin-right: 10px;
        transition: background .2s;
    }

        .btn-primary:hover {
            background: #0077b6;
        }

    .btn-secondary {
        background: #6c757d;
        color: white;
        border-radius: 8px;
        padding: 10px 20px;
        margin-right: 10px;
    }

    .btn-danger {
        background: #d9534f;
        color: white;
        border-radius: 8px;
        padding: 10px 20px;
    }

    .alert-success {
        margin-top: 15px;
        font-weight: bold;
    }

    .icon-btn i {
        margin-right: 5px;
    }
</style>

<div class="dashboard">
    <h2>🧑‍🦽 Patient Profile</h2>

    <div class="card">
        <table class="table table-bordered profile-table">
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>@Model.Age</td>
            </tr>
            <tr>
                <th>Blood Group</th>
                <td>@Model.BloodGroup</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>@Model.Place</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>@Model.Address</td>
            </tr>
        </table>

        <div class="mt-3">
            <a asp-action="BookAppointment" class="btn btn-primary icon-btn">
                <i class="fas fa-calendar-plus"></i> Book Appointment
            </a>
            <a asp-controller="Patient" asp-action="ViewAppointment" class="btn btn-primary icon-btn">
                <i class="fas fa-calendar-check"></i> View Appointments
            </a>
            <a asp-action="EditProfile" class="btn btn-secondary icon-btn">
                <i class="fas fa-calendar-plus"></i> Edit Profile
            </a>
            <a asp-action="Logout" class="btn btn-danger icon-btn">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }
    </div>
</div>

@section Scripts {
    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
