    </div> *@

    <div class="glass-container">

        <!-- Hospital Logo -->
        <div class="logo">🏥</div>

        <h1>SMART <span>HOSPITAL SYSTEM</span></h1>
        <div class="tagline">Digital • Secure • Intelligent Healthcare Platform</div>

        <div class="cards">
            <a asp-controller="Admin" asp-action="Login" class="card">
                <div class="icon">🛡️</div>
                <h3>Admin</h3>
                <p>Manage system, doctors, and reports</p>
            </a>

            <a asp-controller="Patient" asp-action="Register" class="card">
                <div class="icon">🧑‍🤝‍🧑</div>
                <h3>Patient</h3>
                <p>Book appointments & view records</p>
            </a>

            <a asp-controller="Account" asp-action="Login" class="card">
                <div class="icon">👨‍⚕️</div>
                <h3>Doctor</h3>
                <p>Consult, prescribe & manage care</p>
            </a>
        </div>

    </div>

</body>
</html>
